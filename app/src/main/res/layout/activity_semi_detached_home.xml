            android:text="Next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.551"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="next_SemiDetached_event"/>

    </LinearLayout>

</ScrollView>