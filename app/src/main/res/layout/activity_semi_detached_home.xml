            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/semi_detached_1" />

        <TextView
            android:id="@+id/textViewSemiDetached1"
            style="@style/DisplayTxt"
            android:layout_width="363dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:text="@string/txt_SemiDetached1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageCondo1"
            app:layout_constraintVertical_bias="0.009" />

        <CheckBox
            android:id="@+id/checkBoxSemiDetachedVChbx1"
            android:layout_width="156dp"
            android:layout_height="27dp"
