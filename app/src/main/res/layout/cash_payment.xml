<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewTxtPrepareCash"
        android:layout_width="346dp"
        android:layout_height="98dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="70px"
        android:text="Please prepare your cash!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewFullName"
        android:layout_width="87dp"
        android:layout_height="29dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="72dp"
        android:gravity="center"
        android:text="Full Name:"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/editTextTxtCardName"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTxtPrepareCash" />

    <TextView
        android:id="@+id/textViewPhoneNumber"
        android:layout_width="88dp"
        android:layout_height="31dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="Phone:"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/editTextTxtPhoneNumber"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFullName" />

    <TextView
        android:id="@+id/textViewCountry"
        android:layout_width="90dp"
        android:layout_height="28dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="Country:"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/editTextCountry"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPhoneNumber" />

    <EditText
        android:id="@+id/editTextTxtCardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTxtPrepareCash" />

    <EditText
        android:id="@+id/editTextTxtPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="56dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTxtCardName" />

    <EditText
        android:id="@+id/editTextCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="56dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTxtCardName" />

    <Button
        android:id="@+id/buttonPay"
        android:layout_width="136dp"
        android:layout_height="56dp"
        android:layout_marginBottom="188dp"
        android:onClick="onClickPay"
        android:text="Pay"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.574"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>